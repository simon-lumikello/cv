---
import type { SkillGroup } from "@/types/SkillGroup";
import SkillsList from "@/components/SkillsList.astro";

interface Props {
    skillGroup: SkillGroup;
}
const { skillGroup } = Astro.props;
const { items, icon: Icon } = skillGroup;
---

<div
    class="card bg-base-200 shadow-md hover:shadow-lg transition-all duration-300 border border-base-200 print:break-inside-avoid"
>
    <div class="card-body items-center text-center p-6">
        <div class="avatar avatar-placeholder mb-2">
            <div class="bg-base-300 rounded-full w-16 print:w-10">
                <Icon />
            </div>
        </div>
        <div class="flex flex-wrap justify-center gap-2">
            <SkillsList items={items} />
        </div>
    </div>
</div>
